<div class="container mt-5">
  <h1>Shopping Cart</h1>
  <% if @cart.cart_items.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.product.product_name %></td>
            <td><%= number_to_currency(cart_item.product.price) %></td>
            <td><%= cart_item.quantity %></td>
            <td><%= number_to_currency(cart_item.total_price) %></td>
            <td>
              <%= link_to 'Remove', cart_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Proceed to Checkout', checkout_path, class: 'btn btn-primary' %>
  <% else %>
    <p>Your shopping cart is empty.</p>
  <% end %>
</div>
