<main class="home-page">
    <section class="hero" style="background-image: url('cover.jpeg');" data-track-location="Header">
        <div class="home-container">
            <!-- Link to products page with button -->
            <a href="<%= products_list_path %>" class="btn btn-danger btn-lg">Hundreds of products</a>
            <!-- Main heading -->
            <h1 class="hero__heading">Serving Wagging Tails and Happy Hearts</h1>
            <!-- Subheading -->
            <div class="home-type-body-large font-weight-500">Your One-Stop Doggy Dreams Destination!</div>
        </div>
        <!-- Hero marquee section -->
        <div class="hero-marquee" style="--card-count: 24;">
            <!-- Button group for Categories-->
            <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
            <% @categories.each do |category| %>
            <%= link_to category.name, products_path(category_id: category.id), class: "btn btn-outline-primary" %>
            <% end %>
            </div>
        </div>
    </section>

  <% if @new_products.any? %>
    <div class="container mt-4">
      <h2>New Products</h2>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @new_products.each do |product| %>
          <%= render partial: 'products/product', locals: { product: product } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @recently_updated_products.any? %>
    <div class="container mt-4">
      <h2>The last 5 sold - Almost sold out.</h2>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @recently_updated_products.each do |product| %>
          <%= render partial: 'products/product', locals: { product: product } %>
        <% end %>
      </div>
    </div>
  <% end %>

</main>
