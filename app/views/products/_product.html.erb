<div class="col">
  <div class="card" style="width: 18rem;">
    <%= link_to product_path(product) do %>
      <% if product.image.attached? %>
        <%= image_tag url_for(product.image), :size => "180x180", class: "card-img-top", alt: product.product_name %>
      <% else %>
        <%= image_tag "image.jpeg", :size => "180x180", class: "card-img-top", alt: "Placeholder Image" %>
      <% end %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= product.product_name %></h5>
      <p class="card-text"><%= truncate(product.description, length: 45) %></p>
      <p class="card-text"><strong>Price:</strong> <%= number_to_currency(product.price) %></p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
</div>
