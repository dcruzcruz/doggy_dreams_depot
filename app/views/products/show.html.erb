<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <% if @product.image.attached? %>
        <%= image_tag url_for(@product.image), class: "img-fluid rounded", alt: @product.product_name %>
      <% else %>
        <%= image_tag "image.jpeg", class: "img-fluid rounded", alt: "Placeholder Image" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2><%= @product.product_name %></h2>
      <p><%= @product.description %></p>
      <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
      <%= form_with(url: carts_path, method: :post, local: true) do |form| %>
      <%= form.hidden_field :product_id, value: @product.id %>
      <%= form.submit "Add to cart", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
